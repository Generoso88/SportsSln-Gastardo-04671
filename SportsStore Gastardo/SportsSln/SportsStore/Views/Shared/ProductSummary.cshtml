@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>₱@Model.Price</small>
            </span>
        </h4>
    </div>

    <div class="card-body">
        <p class="card-text">@Model.Description</p>
    </div>

    <div class="card-footer bg-transparent border-top-0">
        <form id="@Model.ProductID" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-success float-end">Add To Cart</button>
        </form>
    </div>
</div>
